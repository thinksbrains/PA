<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.devilucky.placeapp.ConfigActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/com_facebook_profile_picture_blank_square" />

    <TextView
        android:id="@+id/tv_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circleImageView"
        android:layout_centerHorizontal="true"
        android:text="Nombre de usuario"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bt_micuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_usuario"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="@drawable/gradient_buton"
        android:padding="8dp"
        android:text="Mi Cuenta"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bt_mismsj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_micuenta"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="@drawable/gradient_buton"
        android:padding="8dp"
        android:text="Mis Mensajes"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bt_config"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_mismsj"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="@drawable/gradient_buton"
        android:padding="8dp"
        android:text="Configuraciones"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bt_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bt_logout"
        android:layout_margin="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/gradient_buton"
        android:padding="8dp"
        android:text="Acerca de"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bt_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bt_config"
        android:layout_margin="5dp"
        android:background="@drawable/gradient_buton"
        android:padding="8dp"
        android:text="Cerrra session"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</RelativeLayout>
