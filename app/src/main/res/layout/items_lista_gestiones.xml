<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/options"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tx_nombre"
                android:layout_alignRight="@+id/tx_nombre"
                android:layout_alignTop="@+id/tx_nombre"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                app:srcCompat="@mipmap/ic_options" />

            <TextView
                android:id="@+id/tx_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/tx_correo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tx_nombre"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/tx_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tx_nombre"
                android:layout_alignStart="@+id/tx_nombre"
                android:layout_below="@+id/tx_correo"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/tx_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tx_type"
                android:layout_alignStart="@+id/tx_type"
                android:layout_below="@+id/tx_type"
                android:layout_weight="1"
                android:text="TextView" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />
</LinearLayout>
